{
  "expo": {
    "name": "FieldLog",
    "slug": "fieldlog",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.fieldlog",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "FieldLog needs access to your camera to take pictures for notes.",
        "NSLocationWhenInUseUsageDescription": "FieldLog needs access to your location to add location data to notes.",
        "NSMicrophoneUsageDescription": "FieldLog needs access to your microphone to record voice notes.",
        "NSPhotoLibraryUsageDescription": "FieldLog needs access to your photo library to add images to notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.fieldlog",
      "versionCode": 1,
      "permissions": [
        "CAMERA", 
        "ACCESS_FINE_LOCATION", 
        "RECORD_AUDIO", 
        "READ_EXTERNAL_STORAGE", 
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-location",
      "expo-media-library",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
